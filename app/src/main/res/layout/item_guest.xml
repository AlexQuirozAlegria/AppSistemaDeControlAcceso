<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="?android:attr/selectableItemBackground"
    android:layout_marginBottom="8dp"
    android:elevation="2dp"
    android:clipToPadding="false"
    android:clipChildren="false">

    <!-- Fila 1: Nombre y Estado -->
    <TextView
        android:id="@+id/guestNameTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nombre del Invitado Apellido Largo Que Se Corta"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="?android:attr/textColorPrimary"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/statusChip"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintRight_toLeftOf="@id/statusChip"
        app:layout_goneMarginEnd="8dp" />

    <com.google.android.material.chip.Chip
        android:id="@+id/statusChip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activo"
        app:chipBackgroundColor="@color/design_default_color_primary"
        app:chipStrokeWidth="0dp"
        android:textColor="@android:color/white"
        app:chipCornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guestNameTextView"
        app:layout_constraintBottom_toBottomOf="@+id/guestNameTextView"
        app:layout_constraintStart_toEndOf="@+id/guestNameTextView"
        app:layout_constraintHorizontal_bias="1"
        android:layout_marginStart="8dp" />

    <!-- Fila 2: Tipo de Invitación y Fecha de Expiración -->
    <TextView
        android:id="@+id/invitationTypeTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Tipo: Única"
        android:textColor="?android:attr/textColorSecondary"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guestNameTextView"
        app:layout_constraintEnd_toStartOf="@+id/dateExpirationGroup"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintRight_toLeftOf="@id/dateExpirationGroup"
        app:layout_goneMarginEnd="8dp" />

    <LinearLayout
        android:id="@+id/dateExpirationGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/invitationTypeTextView"
        app:layout_constraintBottom_toBottomOf="@+id/invitationTypeTextView"
        app:layout_constraintStart_toEndOf="@+id/invitationTypeTextView"
        app:layout_constraintHorizontal_bias="1"
        android:layout_marginStart="8dp">

        <TextView
            android:id="@+id/textDateExpiration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha de expiracion:"
            android:textColor="?android:attr/textColorSecondary"
            android:visibility="gone" />

        <TextView
            android:id="@+id/guestExpirationDateValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="31/12/2025"
            android:textColor="?android:attr/textColorSecondary"
            android:visibility="gone" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
